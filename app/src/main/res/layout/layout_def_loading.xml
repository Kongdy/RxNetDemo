<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/loading_view"
    android:layout_width="@dimen/dp_160"
    android:layout_height="@dimen/dp_160"
    android:minHeight="@dimen/dp_130"
    android:minWidth="@dimen/dp_130"
    android:background="@drawable/shape_radius_white_bg"
    android:padding="@dimen/dp_30">

    <com.kongdy.rxnetdemo.view.MaterialProgressView
        android:id="@+id/loading_progress"
        android:layout_width="@dimen/dp_36"
        android:layout_height="@dimen/dp_36"
        android:layout_centerHorizontal="true"
        android:background="@android:color/transparent"
        app:mpv_stroke_colors="@array/loading_colors"/>

    <TextView
        android:id="@+id/loading_text"
        android:layout_below="@id/loading_progress"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_black"
        android:layout_centerHorizontal="true"
        android:text="@string/short_loading"
        android:textSize="@dimen/sp_16" />
</RelativeLayout>